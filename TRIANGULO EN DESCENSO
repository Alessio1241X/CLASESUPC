#include <iostream>
#include <cstdlib>
#include <time.h>
using namespace std;
#define N 5

int main() {
	system("color 0a");
	int numero;
	for (int i = 0; i <= N; i++) {
		for (int j = 0; j <= N; j++) {
			if (i == j || j == 0 || i == N) {
				cout << "* ";
			}
			else {
				cout << "  ";
			}
		}
		cout << endl;
	}
	for (int i = 0; i <= N; i++) {
		for (int j = 0; j <= 11; j++) {
			if (i == j || j == 0 || i == N || j == 6 || j == i + 6) {
				cout << "* ";
			}
			else {
				cout << "  ";
			}
		}
		cout << endl;
	}
	for (int i = 0; i <= N; i++) {
		for (int j = 0; j <= 17; j++) {
			if (i == j || j == 0 || i == N || j == 6 || j == i + 6 || j == i + 12 || j == 12) {
				cout << "* ";
			}
			else {
				cout << "  ";
			}
		}
		cout << endl;
	}
	return 0;

}

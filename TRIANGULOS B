#include <iostream>

using namespace std;

int main()
{
	int numero = 0;
	for (int i = 0; i <= 4; i++) {
		for (int j = 0; j <= 14; j++) {
			if (i == 4 || j == 0 || i == j||  j == 5||  j == 10 || i + 5 == j || i + 10 == j)
			{
				cout << "* ";
			}
			else
			{
				cout << "  ";
			}
		}
		cout << endl;
	}
	for (int i = 0; i <= 4; i++)
	{
		for (int j = 0; j <= 9; j++)
		{
			if (i == 4 || j == 0 || i == j || j == 5||  i + 5 == j)
			{
				cout << "* ";
			}
			else
			{
				cout << "  ";
			}
		}
		cout << endl;
	}
	for (int i = 0; i <= 4; i++)
	{
		for (int j = 0; j <= 4; j++)
		{
			if (i == 4 || j == 0 || j == i)
			{
				cout << "* ";
			}
			else
			{
				cout << "  ";
			}
		}
		cout << endl;
	}
	return 0;
}
